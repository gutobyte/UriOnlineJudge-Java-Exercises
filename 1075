import java.io.IOException;
import java.util.Scanner;

public class Main {
 
    public static void main(String[] args) throws IOException {
 
        Scanner scan = new Scanner(System.in);
		
		int n, soma=0;
		
		n = scan.nextInt();
		
		for(int i=0; i<10000;i++)
		{
			soma++;
			
			
			if(soma%n==2)
			{
				System.out.println(soma);
			}
		}
	 	
 
    }
 
}
